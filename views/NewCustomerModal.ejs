<div class="modal-header">
	<h3 class="modal-title" id="modal-title">Aggiungi Intestatario</h3>
</div>
<div class="modal-body" id="modal-body">
	<ul>
			<li ng-repeat="item in $ctrl.items">
					<a href="#" ng-click="$event.preventDefault(); $ctrl.selected.item = item">{{ item }}</a>
			</li>
	</ul>
	<div class="input-container"><input type="text" placeholder="Nome" ng-model="customer.name"/></div>
	<div class="input-container"><input type="text" placeholder="Indirizzo" ng-model="customer.web_link"/></div>
	<div class="input-container"><input type="text" placeholder="CAP Paese (provincia)" ng-model="customer.address1"/></div>
	<div class="input-container"><input type="text" placeholder="Partita Iva" ng-model="customer.address2"/></div>
	<div class="input-container"><input type="text" placeholder="Codice Fiscale" ng-model="customer.postal"/></div>
</div>
<div class="modal-footer">
	<button class="btn btn-primary" type="button" ng-click="ok()">OK</button>
	<button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
</div>